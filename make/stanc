STANC3=stanc3

$(STANC3):
	git clone https://github.com/stan-dev/stanc3

bin/stanc$(EXE): $(STANC3) $(shell find $(STANC3)/src/ -type f -name '*.ml*')
	pushd $(STANC3) && echo "--- Rebuilding stanc ---\n" && dune build @install && popd
	@mkdir -p $(dir $@)
	cp $(STANC3)/_build/default/src/stanc/stanc.exe bin/stanc$(EXE)
